<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="56dp"
              android:background="#ffefefef">
    <ProgressBar android:id="@+id/client_translate_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#ffefefef"
            android:progressDrawable="@drawable/progress_drawable"
            android:max="100"
            android:progress="0"
            android:focusable="false"/>
    <ImageView android:id="@+id/client_image_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/icon_success"
            android:layout_margin="4dp"
            android:focusable="false"/>
    <Button android:id="@+id/client_button_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="86dp"
            android:text="@string/client_button_download"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:focusable="false"/>
    <LinearLayout android:id="@+id/client_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/client_image_state"
            android:layout_toLeftOf="@id/client_button_download"
            android:layout_centerVertical="true">
        <TextView android:id="@+id/client_text_title"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:textColor="#ff000000"
                  android:text="@string/client_song_name"
                  android:singleLine="true"
                  android:focusable="false"/>
        <TextView android:id="@+id/client_text_detail"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:textColor="#ff4f4f4f"
                  android:text="@string/client_song_detail"
                  android:layout_below="@id/client_text_title"
                  android:singleLine="true"
                  android:focusable="false"/>
    </LinearLayout>

</RelativeLayout>
